    <p>Má»¤C TIÃŠU Äá»ŠCH (Báº¥m Ä‘á»ƒ báº¯n)</p>
    <div class="grid" id="cpu-board"></div>
    
    <p>HÃ€M Äá»˜I Cá»¦A Báº N</p>
    <div class="grid" id="user-board"></div>

    <button class="btn" onclick="location.reload()">LÃ€M Má»šI TRáº¬N Äáº¤U</button>

    <script>
        const cpuBoard = document.getElementById('cpu-board');
        const userBoard = document.getElementById('user-board');
        const info = document.getElementById('info');
        const cpuSquares = [];
        const userSquares = [];
        let cpuShips = [];
        let userShips = [12,13,14, 35,45,55, 71,72, 88,98]; // Vá»‹ trÃ­ tÃ u cá»§a báº¡n
        let gameOver = false;

        // Táº¡o bÃ n cá»
        for (let i = 0; i < 100; i++) {
            const cSquare = document.createElement('div');
            cSquare.onclick = () => playerShoot(i);
            cpuBoard.appendChild(cSquare);
            cpuSquares.push(cSquare);

            const uSquare = document.createElement('div');
            if(userShips.includes(i)) uSquare.classList.add('ship');
            userBoard.appendChild(uSquare);
            userSquares.push(uSquare);
        }

        // MÃ¡y Ä‘áº·t tÃ u ngáº«u nhiÃªn
        while(cpuShips.length < 10) {
            let r = Math.floor(Math.random() * 100);
            if(!cpuShips.includes(r)) cpuShips.push(r);
        }

        info.innerText = "Radar Ä‘Ã£ sáºµn sÃ ng! HÃ£y chá»n má»¥c tiÃªu trÃªn báº£n Ä‘á»“ Äá»‹ch.";

        function playerShoot(i) {
            if(gameOver || cpuSquares[i].classList.contains('hit') || cpuSquares[i].classList.contains('miss')) return;

            if(cpuShips.includes(i)) {
                cpuSquares[i].classList.add('hit');
                info.innerText = "ğŸ”¥ TRÃšNG Rá»’I! Äá»‹ch Ä‘ang bá»‘c chÃ¡y!";
                if(document.querySelectorAll('#cpu-board .hit').length === 10) {
                    info.innerText = "ğŸ† CHIáº¾N THáº®NG! Báº¡n Ä‘Ã£ tiÃªu diá»‡t toÃ n bá»™ háº¡m Ä‘á»™i Ä‘á»‹ch!";
                    gameOver = true;
                }
            } else {
                cpuSquares[i].classList.add('miss');
                info.innerText = "ğŸ’§ Há»¥t rá»“i! Äá»‹ch Ä‘ang pháº£n cÃ´ng...";
                setTimeout(cpuShoot, 600);
            }
        }

        function cpuShoot() {
            let r = Math.floor(Math.random() * 100);
            if(userSquares[r].classList.contains('hit') || userSquares[r].classList.contains('miss')) return cpuShoot();

            if(userShips.includes(r)) {
                userSquares[r].classList.add('hit');
                info.innerText = "âš ï¸ Cáº¢NH BÃO! TÃ u cá»§a báº¡n bá»‹ báº¯n trÃºng!";
            } else {
                userSquares[r].classList.add('miss');
                info.innerText = "ğŸ˜… May quÃ¡, nÃ³ báº¯n há»¥t! LÆ°á»£t cá»§a báº¡n.";
            }
        }
